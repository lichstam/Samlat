{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["es6"],
    "module": "ES2022",
    "moduleResolution": "node",
    "noEmit": true,
    "noEmitOnError": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2022",
    "declarationDir": "./src", 
    "declaration": true, 
    "outDir": "dist"
  },
  "exclude": ["dist", "node_modules", "src/*.test.ts"]
}
